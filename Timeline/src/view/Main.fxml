<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="mainGrid" alignment="center" hgap="20" prefHeight="694.0" prefWidth="600.0" vgap="20" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
   <!-- Título do Jogo -->
   <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="Timeline Game" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0" />

   <!-- Campos de Nome e Avatares -->
   <Label text="Player 1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   <TextField fx:id="player1Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <ImageView fx:id="player1Avatar" fitHeight="100" fitWidth="100" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />

   <Label text="Player 2" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   <TextField fx:id="player2Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <ImageView fx:id="player2Avatar" fitHeight="100" fitWidth="100" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="2" />

   <Label text="Player 3" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   <TextField fx:id="player3Name" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <ImageView fx:id="player3Avatar" fitHeight="100" fitWidth="100" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="3" />

   <Label text="Player 4" GridPane.columnIndex="0" GridPane.rowIndex="4" />
   <TextField fx:id="player4Name" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <ImageView fx:id="player4Avatar" fitHeight="100" fitWidth="100" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="4" />

   <!-- Botões de menu -->
   <Button fx:id="playButton" prefHeight="25.0" prefWidth="149.0" text="Jogar" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   <Button fx:id="instructionsButton" prefHeight="25.0" prefWidth="148.0" text="Instruções" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <Button fx:id="optionsButton" prefHeight="25.0" prefWidth="104.0" text="Opções" GridPane.columnIndex="2" GridPane.rowIndex="6" />
   <Button fx:id="exitButton" prefHeight="25.0" prefWidth="105.0" text="Sair" GridPane.columnIndex="2" GridPane.rowIndex="5" />

   <!-- Status -->
   <Label fx:id="statusLabel" alignment="center" text="Status: Esperando por jogadores..." GridPane.columnSpan="4" GridPane.rowIndex="8" />

   <padding>
      <Insets top="20.0" />
   </padding>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
